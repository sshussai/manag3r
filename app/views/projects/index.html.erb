<div class='card'>
  <div class='card-header mb-2'>
    <h2 class='card-title d-flex justify-content-between'>
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
    </h2>
  </div>

  <% @projects.each do |project| %>
    <%= link_to project, class: 'text-decoration-none m-2' do %>
      <div class='card project-card'>
        <div class='card-body'>
          <div class='mb-3'>
            <%= item_badge(project) %>
            <span class='text-dark'>
              <small>
                <%= project.percent_complete %>% completed
                <%= completed_tasks(project) %>
              </small>
            </span>
          </div>
          <h4 class='card-title text-dark'><%= project.name %></h4>
          <p class='text-secondary'><%= project.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
